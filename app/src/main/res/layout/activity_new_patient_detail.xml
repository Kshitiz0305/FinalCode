<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Patient Details"
                        android:gravity="center"
                        android:fontFamily="@font/sfpro_display_bold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />




                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graylight" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_marginRight="2sp"
                            android:layout_weight="1"
                            android:text="Patient No"
                            android:fontFamily="@font/sfpro_display_semibold"
                            android:padding="8sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:inputType="text"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/txtPatientNo"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_marginRight="2sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="text"
                            android:padding="8sp"
                            android:textSize="13sp" />


                    </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <EditText
                            android:id="@+id/txtPatientName"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:text="kshitiz"
                            android:layout_marginRight="2sp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_border"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="text"
                            android:padding="8sp"
                            android:textSize="13sp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:text="Address"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/txtAddress"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:text="Golfutar"
                            android:textSize="13sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="text"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:padding="8sp"
                            />



                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact No"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/txtContactNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:cursorVisible="true"
                        android:maxLength="10"
                        android:text="9818920889"
                        android:background="@drawable/bg_gray_border"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="8sp"
                        android:textSize="13sp"
                        android:importantForAutofill="no"
                        tools:ignore="SpUsage" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/txtAge"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:cursorVisible="true"
                        android:maxLength="3"
                        android:text="26"
                        android:background="@drawable/bg_gray_border"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"

                        android:inputType="number"
                        android:padding="8sp"
                        android:textSize="13sp"
                        android:importantForAutofill="no"
                        tools:ignore="SpUsage" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/txtemail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:cursorVisible="true"
                        android:text="Kshitizbhandari23@gmail.com"
                        android:background="@drawable/bg_gray_border"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="8sp"
                        android:textSize="13sp"
                        android:importantForAutofill="no"
                        tools:ignore="SpUsage" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sex"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:padding="8sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/optMale"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:checked="true"
                        />
                    <RadioButton android:id="@+id/optFemale"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        />
                    <RadioButton android:id="@+id/optOther"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marital Status"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:padding="8sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/maritalstatusrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/married"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/married"
                            />

                        <RadioButton
                            android:id="@+id/unmarried"
                            android:checked="true"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/unmarried" />



                        <RadioButton
                            android:id="@+id/divorced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/divorced"
                            />

                        <RadioButton
                            android:id="@+id/widowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/widowed"
                            />

                    </RadioGroup>
                    <LinearLayout
                        android:id="@+id/noofhildrenll"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4sp"
                        android:gravity="center"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/noofboys"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:padding="8sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="number"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:hint="Boys" />


                        <EditText
                            android:id="@+id/noofgirls"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:hint="Girls"
                            android:padding="8sp"
                            android:inputType="number"
                            android:textSize="13sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:layout_weight="1" />



                    </LinearLayout>

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5sp"
                    android:background="@color/graylight" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Patient Medical History"
                        android:gravity="center"
                        android:fontFamily="@font/sfpro_display_bold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/drug_allergies"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/drug_allergies"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:cursorVisible="true"
                        android:hint="Any Kind Of Allergy?"
                        android:background="@drawable/bg_gray_border"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="8sp"
                        android:textSize="13sp"
                        android:importantForAutofill="no"
                        tools:ignore="SpUsage" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/do_you_have_any_diseases"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:padding="8sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/diseases"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:cursorVisible="true"
                        android:background="@drawable/bg_gray_border"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textCursorDrawable="@null"
                        android:hint="@string/disease_name_s"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="8sp"
                        android:textSize="13sp"
                        android:importantForAutofill="no"
                        tools:ignore="SpUsage" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Medication"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:padding="8sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/currentmedicationrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/yes"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            />

                        <RadioButton
                            android:id="@+id/no"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/no" />




                    </RadioGroup>
                    <LinearLayout
                        android:id="@+id/medicationll"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4sp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/medicationmedicinename"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:padding="8sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="text"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:hint="@string/medication_s_medicine_name" />




                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/graylight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unhealthy_habits"
                        android:gravity="center"
                        android:fontFamily="@font/sfpro_display_bold"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/unhealthyhabitsrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/optsmoking"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/smoke"
                            />

                        <RadioButton
                            android:id="@+id/optalcohol"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="@string/alcohol_consumption" />




                    </RadioGroup>
                    <LinearLayout
                        android:id="@+id/smokell"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4sp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/smokepcs"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:padding="8sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="number"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:hint="@string/pieces" />




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alcoholll"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4sp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/alcoholpegs"
                            android:layout_width="100dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:padding="8sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:inputType="number"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/bg_gray_border"
                            android:hint="@string/pegs" />




                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/btnSave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/rect_orange"
                                android:fontFamily="@font/sfpro_display_semibold"
                                android:text="SAVE"
                                android:textColor="@color/white"
                                android:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>








            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
