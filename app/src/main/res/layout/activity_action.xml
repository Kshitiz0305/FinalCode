<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorOffWhite"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Hi Ranjan"
                android:textAlignment="textEnd"
                android:background="@color/colorOffWhite"
                android:fontFamily="@font/sfpro_display_semibold"
                android:padding="8sp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_margin="@dimen/_8kdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10kdp"
                app:cardElevation="@dimen/_2kdp"
                app:cardMaxElevation="@dimen/_4kdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunyahealth"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8kdp"
                app:cardCornerRadius="@dimen/_10kdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_2kdp"
                app:cardMaxElevation="@dimen/_4kdp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/btnNewPatient"
                        android:layout_width="@dimen/_225sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_175sdp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/sfpro_display_semibold"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="New Patient"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/gradient_vertical" />


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="end"
                            android:paddingRight="@dimen/_5sdp"
                            android:src="@drawable/ic_user" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/tvText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="OR"
                            android:textColor="@color/graylight" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_toLeftOf="@id/tvText"
                            android:background="@color/graylight" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:layout_toRightOf="@id/tvText"
                            android:background="@color/graylight" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/existingBtn"
                        android:layout_width="@dimen/_225sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:background="@drawable/bg_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_175sdp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/sfpro_display_semibold"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Existing Patient"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/gradient_vertical" />


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="end"
                            android:paddingRight="@dimen/_10sdp"
                            android:src="@drawable/ic_search" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Log Out"
                android:fontFamily="@font/sfpro_display_semibold"
                android:padding="5sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:id="@+id/logout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/bg_gray_border"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </LinearLayout>
</layout>