<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOffWhite"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sfpro_display_semibold"
                android:text="ECG"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.7sp" />
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/pairtxt"
                android:gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/sfpro_display_semibold"
                android:text="@string/pair_device"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.7sp" />


        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/lead1pic" />


                <LinearLayout
                    android:id="@+id/singleleadecg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.2dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="@string/single_lead"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15.7sp" />


                    <ImageView
                        android:layout_width="7.1dp"
                        android:layout_height="12.6dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/grayarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graylight" />

                <LinearLayout
                    android:id="@+id/chestleadecg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.2dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="Chest Six Lead"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15.7sp" />


                    <ImageView
                        android:layout_width="7.1dp"
                        android:layout_height="12.6dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/grayarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graylight" />

                <LinearLayout
                    android:id="@+id/limbsixlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.2dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="Limb Six Lead"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15.7sp" />


                    <ImageView
                        android:layout_width="7.1dp"
                        android:layout_height="12.6dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/grayarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graylight" />

                <LinearLayout
                    android:id="@+id/Twelvelead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.2dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="Twelve Lead"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15.7sp" />


                    <ImageView
                        android:layout_width="7.1dp"
                        android:layout_height="12.6dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/grayarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graylight" />

                <LinearLayout
                    android:id="@+id/FitnessECG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.2dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="@string/fitness_test"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15.7sp" />


                    <ImageView
                        android:layout_width="7.1dp"
                        android:layout_height="12.6dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/grayarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graylight"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_210sdp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/bt_complete"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0."
                                android:background="@drawable/rect_orange"
                                android:fontFamily="@font/sfpro_display_semibold"
                                android:text="Complete ECG"
                                android:textColor="@color/white"
                                android:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="61dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/syncimg"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="end"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/sfpro_display_semibold"
                                android:src="@drawable/ic_sync"
                                android:text="TAKE ECG"
                                android:textColor="@color/white"
                                android:visibility="visible" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:visibility="gone" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="61dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/longsyncimg"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="end"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/sfpro_display_semibold"
                                android:src="@drawable/ic_sync"
                                android:text="TAKE ECG"
                                android:textColor="@color/white"
                                android:visibility="visible" />


                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:visibility="gone" />

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</layout>












