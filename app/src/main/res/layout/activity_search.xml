<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorOffWhite"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:gravity="right"
                        android:padding="8sp"
                        android:id="@+id/haName"
                        android:text="Hi Ranjan"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:src="@drawable/sunyahealth"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_8kdp"
                    app:cardCornerRadius="@dimen/_10kdp"
                    app:cardElevation="@dimen/_2kdp"
                    app:cardMaxElevation="@dimen/_4kdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:id="@+id/btnVItal"

                        android:background="@drawable/bg_gray_border"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp_searchType"
                            android:entries="@array/search_option"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="@dimen/_225sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            android:id="@+id/ll_id"
                            android:background="@drawable/bg_gray_border"
                            android:visibility="gone"
                            android:layout_gravity="center">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:textSize="18sp"

                                android:id="@+id/et_id"
                                android:hint="id"
                                android:fontFamily="@font/sfpro_display_semibold"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_name"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_width="@dimen/_225sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_gray_border"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="@dimen/_175sdp"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:hint="Search Name"
                                android:textSize="18sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_vertical" />

                            <ImageView
                                android:id="@+id/btnsearch"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:paddingRight="@dimen/_3sdp"

                                android:src="@drawable/ic_search" />


                        </LinearLayout>


                        <!--                    <CheckBox-->
                        <!--                        android:layout_width="@dimen/_35sdp"-->
                        <!--                        android:layout_height="@dimen/_35sdp"-->
                        <!--                        android:layout_marginLeft="@dimen/_5sdp"-->
                        <!--                        android:layout_gravity="center"-->
                        <!--                        />-->



                    </LinearLayout>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:visibility="gone" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/rv_option"
                        tools:listitem="@layout/table_item"

                        />



                    <Button
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:id="@+id/btnproceed"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:background="@drawable/toast_backgraound"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </ScrollView>




    </LinearLayout>
</layout>