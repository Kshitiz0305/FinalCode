<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Hi Ranjan"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:padding="8sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/patientName"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:gravity="right"
                    android:padding="8sp"
                    android:id="@+id/haName"
                    android:text="Hi Ranjan"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200kdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunyahealth"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                 android:id="@+id/btnTest"
                    android:background="@color/green"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:textColor="@color/white"
                        android:text="Perform Test"/>
                    <ImageView
                        android:layout_width="@dimen/_65kdp"
                        android:layout_height="@dimen/_65kdp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:background="@color/green"
                    android:id="@+id/btnNewPatient"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:textSize="18sp"

                        android:gravity="center"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:textColor="@color/white"
                        android:text="Next Patient"/>
<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/_40sdp"-->
<!--                        android:layout_height="@dimen/_40sdp"-->
<!--                        android:layout_gravity="end"-->
<!--                        android:layout_marginLeft="@dimen/_20sdp"-->
<!--                        android:src="@drawable/ic_search_white_24dp" />-->

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Log Out"
                android:fontFamily="@font/sfpro_display_semibold"
                android:padding="8sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/logout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/rect_green"
                android:layout_height="@dimen/_40sdp"
                />

        </RelativeLayout>

    </LinearLayout>
</layout>